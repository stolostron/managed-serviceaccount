{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchFileNames": [
                "Dockerfile"
            ],
            "enabled": false
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchFileNames": [
                "Dockerfile.rhtap"
            ],
            "enabled": true
        }
    ],
    "addLabels": [
        "ok-to-test"
    ],
    "schedule": "at any time"
}
