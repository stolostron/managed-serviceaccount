{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": [
        "main",
        "/^backplane-.*/"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchFileNames": [
                "Dockerfile"
            ],
            "enabled": false
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchFileNames": [
                "Dockerfile.rhtap"
            ],
            "enabled": true
        },
        {
            "matchBaseBranches": [
                "backplane-2.8"
            ],
            "enabled": false
        },
        {
            "matchBaseBranches": [
                "main"
            ],
            "matchFileNames": [
                ".tekton/**",
                "Dockerfile.rhtap"
            ],
            "enabled": true
        }
    ],
    "addLabels": [
        "ok-to-test"
    ],
    "schedule": "at any time"
}
